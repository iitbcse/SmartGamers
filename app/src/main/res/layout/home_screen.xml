<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/blue_blue_bg"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="UserName"
        android:id="@+id/username_textView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="Last Rewards"
        android:id="@+id/last_reward_textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="Last Activity"
        android:id="@+id/last_activity_textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="Last Activity Time"
        android:id="@+id/last_activity_time_textView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="Total Rewards"
        android:id="@+id/total_reward_textView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#C9000000"
        android:padding="5dp"
        android:text="Error"
        android:id="@+id/error_textView"/>

</LinearLayout>