<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="GAME"
        android:textStyle="bold"
        android:background="#1E88E5"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/brawler"
        android:id="@+id/gameName_game_activity"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#1E88E5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Total"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:id="@+id/total_game_activity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12345678"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_weight="0.25"
            android:id="@+id/lastReward_game_activity"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="99/99/99"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_weight="0.25"
            android:id="@+id/lastRewardTime_game_activity"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:background="#F01B7405"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new Submission"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rewardData_recView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        android:text="SUBMIT"
        android:id="@+id/submit_data_btn"/>

</LinearLayout>